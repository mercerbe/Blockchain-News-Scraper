<div class="ui inverted segment">
  <div class="ui inverted secondary pointing menu">
    <a class="item" href="/">Home</a>
    <a class="item" href="/scrape">Update Scrape</a>
    <a class="item" href="https://github.com/mercerbe/Blockchain-News-Scraper">Github Repo</a>
  </div>
</div>

<div class="ui segment">
  <h1>{{article.headline}}</h1>
  <div class="">
    {{body}}
  </div>
</div>

<div class="ui segment">
  <form class="" action="/comments/{{article._id}}" method="POST">
    <h3>Leave A Comment:</h3>
    <div class="input-field">
      <input type="text" name="name" placeholder="Jane Smith">
    </div>
    <div class="input-field">
      <input type="text" name="body" placeholder="Your comment here...">
    </div>
    <div class="input-field">
      <button type="sumbit" class="ui inverted orange button">Submit</button>
    </div>
  </form>

</div>

<div class="ui segment">
  <h3>Comments:</h3>
  {{#if article.comment}}
    {{#each article.comment}}
    <div class="ui segment">
      <p>{{name}}</p>
      <p>{{body}}</p>
      <p>{{createdAt}}</p>
    </div>
    {{/each}}
    {{else}}
    <p>nothing here yet...</p>
  {{/if}}
</div>
